<!DOCTYPE html>
<html>
  <head>
    <title>Vellmour Imóveis</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 min-h-screen flex flex-col">
    <!-- Flash messages -->
    <% if notice %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 mb-4">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mb-4">
        <%= alert %>
      </div>
    <% end %>

    <!-- Header Navigation (apenas em páginas públicas) -->
    <% unless controller_name == "admin" || params[:controller]&.starts_with?("admin/") %>
      <div class="max-w-6xl mx-auto px-4 py-4">
        <%= render 'shared/header' %>
      </div>
    <% end %>

    <!-- Main content -->
    <main class="flex-grow">
      <%= yield %>
    </main>

    <!-- Footer (apenas em páginas públicas) -->
    <% unless controller_name == "admin" || params[:controller]&.starts_with?("admin/") %>
      <%= render 'shared/footer' %>
    <% end %>
  </body>
</html>

