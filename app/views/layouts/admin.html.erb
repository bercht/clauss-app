<!DOCTYPE html>
<html>
  <head>
    <title>Clauss - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    

    <link rel="stylesheet" href="https://rawcdn.githack.com/nextapps-de/spotlight/0.7.8/dist/css/spotlight.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>    
    <%= javascript_importmap_tags %>

    <script src="https://rawcdn.githack.com/nextapps-de/spotlight/0.7.8/dist/js/spotlight.min.js"></script>
    
  </head>

  <body class="bg-gray-900 min-h-screen flex flex-col">
    <!-- Flash Messages -->
    <% if notice %>
      <div data-controller="sweetalert" 
           data-sweetalert-message-value="<%= notice %>" 
           data-sweetalert-type-value="success">
      </div>
    <% end %>
    
    <% if alert %>
      <div data-controller="sweetalert" 
           data-sweetalert-message-value="<%= alert %>" 
           data-sweetalert-type-value="error">
      </div>
    <% end %>
    
    
    <!-- Navbar (renderizada condicionalmente - exceto home/index) -->
    <%= render 'shared/admin_navbar' %>
    
    <%= render 'shared/flash_messages'%>

    <!-- Main content -->
    <main class="flex-grow">
      <%= yield %>
    </main>

    <!-- Footer (apenas em páginas públicas) -->
    
    <%= render 'shared/admin_footer' %>
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        console.log("Stimulus Application:", window.Stimulus);
        console.log("Controllers registrados:", window.Stimulus.router.modulesByIdentifier);
        
        // Verificar se o SweetAlert está carregado
        if (typeof Swal === 'undefined') {
          console.error('SweetAlert2 não está carregado!');
        } else {
          console.log('SweetAlert2 carregado com sucesso');
        }
      });
      </script>
    
  </body>
</html>