<div class="prose mx-auto my-16">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-purple-600">Gerenciar Bairros</h1>
    <%= link_to "Novo Bairro", new_admin_neighborhood_path, 
        class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded transition-colors" %>
  </div>
  
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Imóveis</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @neighborhoods.each do |neighborhood| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= neighborhood.name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-500"><%= neighborhood.properties.count %> imóveis</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= link_to "Editar", edit_admin_neighborhood_path(neighborhood), 
                  class: "text-blue-600 hover:text-blue-900" %>
              <%= link_to "Deletar", admin_neighborhood_path(neighborhood), 
                  method: :delete, 
                  data: { confirm: "Tem certeza? Isso deletará todos os imóveis deste bairro." },
                  class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @neighborhoods.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-500">Nenhum bairro cadastrado ainda.</p>
      </div>
    <% end %>
  </div>
  
  <div class="mt-6">
    <%= link_to "Voltar ao Dashboard", admin_root_path, 
        class: "bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded transition-colors" %>
  </div>
</div>