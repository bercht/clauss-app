<div class="bg-gray-900">
  <div class="mx-auto max-w-7xl">
    <div class="bg-gray-900 py-10">
      <div class="px-4 sm:px-6 lg:px-8">
        <div class="sm:flex sm:items-center">
          <div class="sm:flex-auto">
            <h1 class="text-base font-semibold text-white">Bairros cadastrados</h1>
            <p class="mt-2 text-sm text-gray-300">Lista dos bairros já cadastrados no sistema.</p>
          </div>
          <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
            <%= link_to new_admin_neighborhood_path, class: "block rounded-md bg-indigo-500 px-3 py-2 text-center text-sm font-semibold text-white hover:bg-indigo-400 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500" do %>Novo bairro<% end %>
          </div>
        </div>
        <div class="mt-8 flow-root">
          <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
              <table class="min-w-full divide-y divide-gray-700">
                <thead>
                  <tr>
                    <th scope="col" class="py-3.5 pr-3 pl-4 text-left text-sm font-semibold text-white sm:pl-0">Nome</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Imóveis</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Ações</th>                    
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-800">
                  <% @neighborhoods.each do |neighborhood| %>
                    <tr>
                      <td class="py-4 pr-3 pl-4 text-sm font-medium whitespace-nowrap text-white sm:pl-0"><%= neighborhood.name %></td>
                      <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-300"><%= neighborhood.properties.count %> imóveis</td>
                        <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-300"><%= link_to "Editar", edit_admin_neighborhood_path(neighborhood), 
                          class: "text-blue-600 hover:text-blue-900" %>
                        <%= link_to "Deletar", admin_neighborhood_path(neighborhood), 
                      data: { 
                        "turbo-method": "delete",
                        "turbo-confirm": "Tem certeza? Isso deletará todos os imóveis deste bairro." 
                      },
                      class: "text-red-600 hover:text-red-900" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
