<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="space-y-12">
    <div class="border-b border-gray-900/10 pb-12">
      <h2 class="text-3xl/7 font-semibold text-purple-600">Novo Imóvel</h2>
      <p class="mt-1 text-sm/6 text-gray-600">Preencha todas as informações do novo imóvel para o catálogo.</p>

      <%= form_with model: [:admin, @property], local: true, class: "mt-10", data: { turbo: false } do |form| %>
        <% if @property.errors.any? %>
          <div class="mb-8 rounded-md bg-red-50 border border-red-200 px-4 py-3">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@property.errors.count, "erro") %> encontrado:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @property.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
          <!-- Título -->
          <div class="col-span-full">
            <%= form.label :title, "Título do Imóvel", class: "block text-sm/6 font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :title, 
                  class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6", 
                  placeholder: "Ex: Casa 3 quartos com piscina",
                  required: true %>
            </div>
          </div>

          <!-- Tipo de Propriedade -->
          <div class="sm:col-span-3">
            <%= form.label :property_type, "Tipo de Imóvel", class: "block text-sm/6 font-medium text-gray-900" %>
            <div class="mt-2 grid grid-cols-1">
              <%= form.select :property_type, 
                  options_for_select([
                    ['Selecione o tipo', ''],
                    ['Casa', 'casa'],
                    ['Apartamento', 'apartamento'],
                    ['Cobertura', 'cobertura'],
                    ['Casa de Condomínio', 'casa_condominio'],
                    ['Loft', 'loft'],
                    ['Studio', 'studio'],
                    ['Kitnet', 'kitnet'],
                    ['Sobrado', 'sobrado'],
                    ['Chácara', 'chacara'],
                    ['Terreno', 'terreno'],
                    ['Comercial', 'comercial']
                  ], @property.property_type),
                  {}, 
                  { class: "col-start-1 row-start-1 w-full appearance-none rounded-md bg-white py-1.5 pr-8 pl-3 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" } %>
              <svg class="pointer-events-none col-start-1 row-start-1 mr-2 size-5 self-center justify-self-end text-gray-500 sm:size-4" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M4.22 6.22a.75.75 0 0 1 1.06 0L8 8.94l2.72-2.72a.75.75 0 1 1 1.06 1.06l-3.25 3.25a.75.75 0 0 1-1.06 0L4.22 7.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>

          <!-- Mobiliado -->
          <div class="sm:col-span-3">
            <fieldset>
              <legend class="text-sm/6 font-semibold text-gray-900">Mobiliado</legend>
              <div class="mt-6 space-y-6">
                <div class="flex items-center gap-x-3">
                  <%= form.radio_button :furnished, true, id: "furnished_true", class: "relative size-4 appearance-none rounded-full border border-gray-300 bg-white before:absolute before:inset-1 before:rounded-full before:bg-white checked:border-indigo-600 checked:bg-indigo-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
                  <%= form.label :furnished, "Sim, mobiliado", for: "furnished_true", class: "block text-sm/6 font-medium text-gray-900" %>
                </div>
                <div class="flex items-center gap-x-3">
                  <%= form.radio_button :furnished, false, id: "furnished_false", class: "relative size-4 appearance-none rounded-full border border-gray-300 bg-white before:absolute before:inset-1 before:rounded-full before:bg-white checked:border-indigo-600 checked:bg-indigo-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
                  <%= form.label :furnished, "Não mobiliado", for: "furnished_false", class: "block text-sm/6 font-medium text-gray-900" %>
                </div>
              </div>
            </fieldset>
          </div>

          <!-- Preço e Área -->
          <div class="sm:col-span-3">
            <%= form.label :price, "Preço (R$)", class: "block text-sm/6 font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.number_field :price, 
                  step: 0.01, min: 0,
                  class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6", 
                  placeholder: "450000.00",
                  required: true %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <%= form.label :area_m2, "Área (m²)", class: "block text-sm/6 font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.number_field :area_m2, 
                  step: 0.01, min: 0,
                  class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6", 
                  placeholder: "120.50" %>
            </div>
          </div>

          <!-- Quartos, Banheiros e Vagas -->
          <div class="sm:col-span-2">
            <%= form.label :bedrooms, "Quartos", class: "block text-sm/6 font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.number_field :bedrooms, 
                  min: 0, max: 20,
                  class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6", 
                  placeholder: "3" %>
            </div>
          </div>

          <div class="sm:col-span-2">
            <%= form.label :bathrooms, "Banheiros", class: "block text-sm/6 font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.number_field :bathrooms, 
                  min: 0, max: 10,
                  class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6", 
                  placeholder: "2" %>
            </div>
          </div>

          <div class="sm:col-span-2">
            <%= form.label :garage_spaces, "Vagas de Garagem", class: "block text-sm/6 font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.number_field :garage_spaces, 
                  min: 0, max: 10,
                  class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6", 
                  placeholder: "2" %>
            </div>
          </div>

          <!-- Bairro -->
          <div class="col-span-full">
            <%= form.label :neighborhood_id, "Bairro", class: "block text-sm/6 font-medium text-gray-900" %>
            <div class="mt-2 grid grid-cols-1">
              <%= form.select :neighborhood_id, 
                  options_for_select([['Selecione um bairro', '']] + @neighborhoods.map { |n| [n.name, n.id] }, @property.neighborhood_id),
                  {}, 
                  { class: "col-start-1 row-start-1 w-full appearance-none rounded-md bg-white py-1.5 pr-8 pl-3 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6", required: true } %>
              <svg class="pointer-events-none col-start-1 row-start-1 mr-2 size-5 self-center justify-self-end text-gray-500 sm:size-4" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M4.22 6.22a.75.75 0 0 1 1.06 0L8 8.94l2.72-2.72a.75.75 0 1 1 1.06 1.06l-3.25 3.25a.75.75 0 0 1-1.06 0L4.22 7.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>

          <!-- Descrição -->
          <div class="col-span-full">
            <%= form.label :description, "Descrição", class: "block text-sm/6 font-medium text-gray-900" %>
            <div class="mt-2">
              <%= form.text_area :description, 
                  rows: 6,
                  class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6", 
                  placeholder: "Descreva as características do imóvel...",
                  required: true %>
            </div>
            <p class="mt-3 text-sm/6 text-gray-600">Descreva detalhadamente as características e diferenciais do imóvel.</p>
          </div>

          <!-- Upload de Imagens com Preview -->
          <div class="col-span-full" data-controller="image-preview">
            <%= form.label :images, "Imagens do Imóvel", class: "block text-sm/6 font-medium text-gray-900" %>
            
            <!-- Área de Upload -->
            <div class="mt-2 flex justify-center rounded-lg border border-dashed border-gray-900/25 px-6 py-10">
              <div class="text-center">
                <svg class="mx-auto size-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M1.5 6a2.25 2.25 0 0 1 2.25-2.25h16.5A2.25 2.25 0 0 1 22.5 6v12a2.25 2.25 0 0 1-2.25 2.25H3.75A2.25 2.25 0 0 1 1.5 18V6ZM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0 0 21 18v-1.94l-2.69-2.689a1.5 1.5 0 0 0-2.12 0l-.88.879.97.97a.75.75 0 1 1-1.06 1.06l-5.16-5.159a1.5 1.5 0 0 0-2.12 0L3 16.061Zm10.125-7.81a1.125 1.125 0 1 1 2.25 0 1.125 1.125 0 0 1-2.25 0Z" clip-rule="evenodd" />
                </svg>
                <div class="mt-4 flex text-sm/6 text-gray-600">
                  <label for="property_images" class="relative cursor-pointer rounded-md bg-white font-semibold text-indigo-600 focus-within:ring-2 focus-within:ring-indigo-600 focus-within:ring-offset-2 focus-within:outline-hidden hover:text-indigo-500">
                    <span>Escolher arquivos</span>
                    <%= form.file_field :images, 
                        multiple: true, 
                        accept: "image/*", 
                        class: "sr-only", 
                        id: "property_images",
                        data: { 
                          image_preview_target: "input",
                          action: "change->image-preview#preview" 
                        } %>
                  </label>
                  <p class="pl-1">ou arraste e solte</p>
                </div>
                <p class="text-xs/5 text-gray-600">PNG, JPG, GIF até 10MB cada (múltiplas imagens)</p>
              </div>
            </div>

            <!-- Container do Preview -->
            <div data-image-preview-target="preview" class="mt-4"></div>
          </div>
        </div>

        <!-- Ações -->
        <div class="mt-6 flex items-center justify-end gap-x-6">
          <%= link_to "Cancelar", admin_properties_path, 
              class: "text-sm/6 font-semibold text-gray-900 hover:text-gray-700" %>
          <%= form.submit "Criar Imóvel", 
              class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div>