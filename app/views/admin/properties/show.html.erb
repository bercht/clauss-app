<div class="max-w-6xl mx-auto px-4 py-8">
  <!-- Navega√ß√£o Admin -->
  <div class="mb-8 flex justify-between items-center">
    <div class="space-x-4">
      <%= link_to "‚Üê Voltar aos im√≥veis admin", admin_properties_path, 
          class: "text-purple-600 hover:text-purple-800 font-medium" %>
      <%= link_to "Ver no site p√∫blico", property_path(@property), 
          class: "text-blue-600 hover:text-blue-800 font-medium", target: "_blank" %>
    </div>
    
    <div class="space-x-2">
      <%= link_to "Editar", edit_admin_property_path(@property), 
          class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded transition-colors" %>
      <%= button_to "Deletar", admin_property_path(@property), 
          method: :delete,
          data: { confirm: "Tem certeza que deseja deletar este im√≥vel?" },
          class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded transition-colors" %>
      <%= button_to "Logout", destroy_user_session_path, 
          method: :delete,
          class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded transition-colors" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <!-- Header com badge admin -->
    <div class="p-8 border-b bg-purple-50">
      <div class="flex items-start justify-between">
        <div>
          <div class="flex items-center gap-2 mb-2">
            <span class="bg-purple-100 text-purple-800 text-xs font-semibold px-2.5 py-0.5 rounded">ADMIN VIEW</span>
          </div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @property.title %></h1>
          <p class="text-xl text-blue-600 mb-1">üìç <%= @property.neighborhood.name %></p>
          <p class="text-3xl font-bold text-green-600">R$ <%= number_with_delimiter(@property.price, delimiter: '.') %></p>
        </div>
      </div>
    </div>

    <!-- Resto igual √† view p√∫blica -->
    <!-- Galeria de Imagens -->
    <% if @property.images.any? %>
      <div class="p-8 border-b">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-2xl font-bold">Fotos (<%= @property.images.count %>)</h2>
          <span class="text-sm text-gray-500">Clique em "Editar" para gerenciar imagens</span>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @property.images.each do |image| %>
            <div class="aspect-w-16 aspect-h-12">
              <%= image_tag image, 
                  class: "w-full h-64 object-cover rounded-lg shadow cursor-pointer hover:shadow-lg transition-shadow",
                  onclick: "openModal('#{url_for(image)}')" %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="p-8 border-b bg-yellow-50">
        <h2 class="text-2xl font-bold mb-4">Fotos</h2>
        <p class="text-yellow-700">‚ö†Ô∏è Nenhuma imagem cadastrada. <%= link_to "Adicionar imagens", edit_admin_property_path(@property), class: "underline" %></p>
      </div>
    <% end %>

    <!-- Descri√ß√£o -->
    <div class="p-8">
      <h2 class="text-2xl font-bold mb-4">Descri√ß√£o</h2>
      <div class="prose max-w-none">
        <%= simple_format(@property.description) %>
      </div>
    </div>

    <!-- Informa√ß√µes do Bairro -->
    <div class="p-8 bg-gray-50">
      <h2 class="text-2xl font-bold mb-4">Sobre o Bairro</h2>
      <p class="text-lg text-gray-700 mb-4"><%= @property.neighborhood.name %></p>
      <%= link_to "Gerenciar bairros", admin_neighborhoods_path, 
          class: "text-purple-600 hover:text-purple-800 font-medium" %>
    </div>
  </div>
</div>

<!-- Modal para ampliar imagens (mesmo da view p√∫blica) -->
<div id="imageModal" class="fixed inset-0 bg-black bg-opacity-75 hidden z-50 flex items-center justify-center p-4">
  <div class="relative max-w-4xl max-h-full">
    <img id="modalImage" src="" alt="" class="max-w-full max-h-full object-contain">
    <button onclick="closeModal()" class="absolute top-4 right-4 text-white text-2xl hover:text-gray-300">‚úï</button>
  </div>
</div>

<script>
function openModal(imageSrc) {
  document.getElementById('modalImage').src = imageSrc;
  document.getElementById('imageModal').classList.remove('hidden');
}

function closeModal() {
  document.getElementById('imageModal').classList.add('hidden');
}

document.getElementById('imageModal').addEventListener('click', function(e) {
  if (e.target === this) closeModal();
});
</script>