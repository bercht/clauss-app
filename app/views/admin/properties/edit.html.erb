<div class="prose mx-auto my-16 max-w-4xl">
  <h1 class="text-3xl font-bold text-purple-600 mb-8">Editar Imóvel</h1>
  
  <%= form_with model: [:admin, @property], local: true, class: "space-y-6" do |form| %>
    <% if @property.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h4><%= pluralize(@property.errors.count, "erro") %> encontrado:</h4>
        <ul>
          <% @property.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :title, "Título do Imóvel", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :price, "Preço (R$)", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :price, step: 0.01, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :neighborhood_id, "Bairro", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :neighborhood_id, 
            options_for_select(@neighborhoods.map { |n| [n.name, n.id] }, @property.neighborhood_id),
            {}, 
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
      </div>
    </div>

    <div>
      <%= form.label :description, "Descrição", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 6, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <!-- Imagens atuais -->
    <% if @property.images.any? %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-3">Imagens Atuais</label>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4" id="current-images">
          <% @property.images.each do |image| %>
            <div class="relative" id="<%= dom_id(image, :container) %>">
              <%= image_tag image, class: "w-full h-24 object-cover rounded-lg" %>
              <%= link_to "✕", admin_property_image_path(@property, image), 
                  method: :delete,
                  data: { 
                    "turbo-method": :delete,
                    "turbo-confirm": "Tem certeza que deseja remover esta imagem?" 
                  },
                  class: "absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center text-sm hover:bg-red-600 transition-colors" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div>
      <%= form.label :images, "Adicionar Novas Imagens", class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :images, multiple: true, accept: "image/*", class: "mt-1 block w-full" %>
      <p class="text-sm text-gray-500 mt-2">
        <strong>Importante:</strong> As novas imagens serão ADICIONADAS às existentes (não substituídas).
        <br>Para remover imagens, use o botão ✕ em cada imagem acima.
      </p>
    </div>

    <div class="flex space-x-4">
      <%= form.submit "Atualizar Imóvel", class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded transition-colors font-semibold" %>
      <%= link_to "Ver Imóvel", property_path(@property), class: "bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded transition-colors font-semibold", target: "_blank" %>
      <%= link_to "Cancelar", admin_properties_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-6 py-3 rounded transition-colors font-semibold" %>
    </div>
  <% end %>
</div>