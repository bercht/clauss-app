      <div class="mt-8 grid grid-cols-1 gap-y-12 sm:grid-cols-2 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
        <% @featured_properties.each do |property| %>
          <div>
            <div class="relative">
              <div class="relative h-72 w-full overflow-hidden rounded-lg">
                <% if property.images.any? %>
                  <%= image_tag property.images.first, 
                      alt: property.title,
                      class: "h-full w-full object-cover" %>
                <% else %>
                  <div class="h-full w-full bg-gray-200 flex items-center justify-center">
                    <span class="text-gray-500">Sem imagem</span>
                  </div>
                <% end %>
              </div>
              
              <div class="relative mt-4">
                <h3 class="text-sm font-medium text-gray-900">
                  <%= truncate(property.title, length: 30) %>
                </h3>
                <p class="mt-1 text-sm text-gray-500">
                  📍 <%= property.neighborhood.name %>
                </p>
              </div>
              
              <!-- Preço sobreposto -->
              <div class="absolute inset-x-0 top-0 flex h-72 items-end justify-end overflow-hidden rounded-lg p-4">
                <div aria-hidden="true" class="absolute inset-x-0 bottom-0 h-36 bg-gradient-to-t from-black opacity-50"></div>
                <div class="relative text-right">
                  <% if property.featured? %>
                    <div class="mb-2">
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-400 text-yellow-900">
                        ⭐ DESTAQUE
                      </span>
                    </div>
                  <% end %>
                  <p class="text-lg font-semibold text-white">
                    R$ <%= number_with_delimiter(property.price, delimiter: '.') %>
                  </p>
                </div>
              </div>
            </div>
            
            <!-- Botão Ver Detalhes -->
            <div class="mt-6">
              <%= link_to property_path(property), 
                  class: "relative flex items-center justify-center rounded-md border border-transparent bg-gray-100 px-8 py-2 text-sm font-medium text-gray-900 hover:bg-gray-200 transition-colors" do %>
                Ver Detalhes
                <span class="sr-only">, <%= property.title %></span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 bg-gray-100 rounded-lg">
        <p class="text-xl text-gray-500">Imóveis em destaque serão exibidos aqui em breve!</p>
        <% if user_signed_in? %>
          <%= link_to "Adicionar Imóveis", admin_properties_path, 
              class: "mt-4 inline-block bg-purple-500 hover:bg-purple-600 text-white px-6 py-2 rounded transition-colors" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


