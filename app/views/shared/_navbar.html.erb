<nav class="bg-gray-800" data-controller="navbar">
  <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <!-- Mobile menu button -->
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <button type="button" 
                class="relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:ring-2 focus:ring-white focus:outline-hidden focus:ring-inset" 
                aria-controls="mobile-menu" 
                aria-expanded="false"
                data-action="click->navbar#toggle">
          <span class="absolute -inset-0.5"></span>
          <span class="sr-only">Abrir menu principal</span>
          
          <!-- Ícone hambúrguer (menu fechado) -->
          <svg class="block size-6" 
               data-navbar-target="hamburger"
               fill="none" 
               viewBox="0 0 24 24" 
               stroke-width="1.5" 
               stroke="currentColor" 
               aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
          
          <!-- Ícone X (menu aberto) -->
          <svg class="hidden size-6" 
               data-navbar-target="closeIcon"
               fill="none" 
               viewBox="0 0 24 24" 
               stroke-width="1.5" 
               stroke="currentColor" 
               aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      
      <!-- Logo e Menu Desktop -->
      <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
        <!-- Logo -->
        <div class="flex shrink-0 items-center">
          <%= link_to root_path, class: "flex items-center" do %>
            <%= image_tag "logo_vellmour_white.png", 
                alt: "Vellmour", 
                class: "h-10 w-auto" %>
          <% end %>
        </div>
        
        <!-- Menu Desktop -->
        <div class="hidden sm:ml-6 sm:block">
          <div class="flex space-x-4">
            <%= link_to "Imóveis", properties_path, 
                class: "rounded-md px-3 py-2 text-sm font-medium #{'bg-gray-900 text-white' if current_page?(properties_path)} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless current_page?(properties_path)}" %>
            
            <!-- Dropdown de Bairros -->
            <div class="relative" data-controller="dropdown">
              <button type="button" 
                      class="flex items-center rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white"
                      data-action="click->dropdown#toggle">
                <span>Bairros</span>
                <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              
              <div class="absolute left-0 z-10 mt-2 w-48 origin-top-left rounded-md bg-white py-1 shadow-lg ring-1 ring-black/5 hidden"
                   data-dropdown-target="menu">
                <% Neighborhood.all.each do |neighborhood| %>
                  <%= link_to neighborhood.name, neighborhood_path(neighborhood), 
                      class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                <% end %>
              </div>
            </div>
            
            <!-- Menu Admin (apenas se logado) -->
            <% if user_signed_in? %>
              <%= link_to "Administração", admin_root_path, 
                  class: "rounded-md px-3 py-2 text-sm font-medium #{'bg-gray-900 text-white' if request.path.starts_with?('/admin')} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless request.path.starts_with?('/admin')}" %>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Área do usuário -->
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
        <% if user_signed_in? %>
          <!-- Notificações (opcional) -->
          <button type="button" 
                  class="relative rounded-full bg-gray-800 p-1 text-gray-400 hover:text-white focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800 focus:outline-hidden">
            <span class="absolute -inset-1.5"></span>
            <span class="sr-only">Ver notificações</span>
            <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
            </svg>
          </button>

          <!-- Dropdown do usuário -->
          <div class="relative ml-3" data-controller="dropdown">
            <div>
              <button type="button" 
                      class="relative flex rounded-full bg-gray-800 text-sm focus:outline-hidden focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-gray-800"
                      data-action="click->dropdown#toggle">
                <span class="absolute -inset-1.5"></span>
                <span class="sr-only">Abrir menu do usuário</span>
                <div class="size-8 rounded-full bg-indigo-500 flex items-center justify-center">
                  <span class="text-white font-medium text-sm">
                    <%= current_user.email.first.upcase %>
                  </span>
                </div>
              </button>
            </div>

            <div class="absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black/5 hidden"
                 data-dropdown-target="menu">
              <div class="px-4 py-2 text-sm text-gray-700 border-b">
                <p class="font-medium">Logado como:</p>
                <p class="text-gray-500"><%= current_user.email %></p>
              </div>
              
              <%= link_to "Painel Admin", admin_root_path, 
                  class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              
              <%= link_to "Sair", destroy_user_session_path, 
                  method: :delete,
                  class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            </div>
          </div>
        <% else %>
          <!-- Botão de Login -->
          <%= link_to "Entrar", new_user_session_path, 
              class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Menu Mobile -->
  <div class="sm:hidden hidden" id="mobile-menu" data-navbar-target="menu">
    <div class="space-y-1 px-2 pt-2 pb-3">
      <%= link_to "Imóveis", properties_path, 
          class: "block rounded-md px-3 py-2 text-base font-medium #{'bg-gray-900 text-white' if current_page?(properties_path)} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless current_page?(properties_path)}" %>
      
      <!-- Bairros no Mobile -->
      <div class="text-gray-400 px-3 py-2 text-base font-medium">Bairros:</div>
      <% Neighborhood.all.each do |neighborhood| %>
        <%= link_to neighborhood.name, neighborhood_path(neighborhood), 
            class: "block rounded-md px-6 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white" %>
      <% end %>
      
      <% if user_signed_in? %>
        <%= link_to "Administração", admin_root_path, 
            class: "block rounded-md px-3 py-2 text-base font-medium #{'bg-gray-900 text-white' if request.path.starts_with?('/admin')} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless request.path.starts_with?('/admin')}" %>
        
        <hr class="my-2 border-gray-700">
        
        <%= link_to "Sair", destroy_user_session_path, 
            method: :delete,
            class: "block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white" %>
      <% else %>
        <%= link_to "Entrar", new_user_session_path, 
            class: "block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white" %>
      <% end %>
    </div>
  </div>
</nav>